<% layout('layouts/boilerplate') %>

<!-- Override the main container for this page -->
<style>
    main.container {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: hidden;
    }
