<% layout('layouts/boilerplate')%>

<div class="container-fluid bg-light d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-md-10 col-lg-5">
            <!-- Header Card -->
            <div class="card shadow-sm mb-3 border-0">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h1 class="card-title mb-0 h3">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </h1>
                </div>
            </div>

            <!-- Register Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <!-- Username -->
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark" for="username">
                                <i class="fas fa-user me-2 text-primary"></i>Username
                            </label>
                            <input class="form-control form-control-lg border-2" type="text" id="username" name="username" required minlength="3" pattern=".{3,}" placeholder="Enter your username">
                            <div class="valid-feedback">
                                <i class="fas fa-check-circle me-1"></i>Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Username must be at least 3 characters.
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark" for="email">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            <input class="form-control form-control-lg border-2" type="email" id="email" name="email" required placeholder="Enter your email">
                            <div class="valid-feedback">
                                <i class="fas fa-check-circle me-1"></i>Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid email.
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark" for="password">
                                <i class="fas fa-lock me-2 text-primary"></i>Password
                            </label>
                            <input class="form-control form-control-lg border-2" type="password" id="password" name="password" required minlength="6" placeholder="Create a password">
                            <div class="valid-feedback">
                                <i class="fas fa-check-circle me-1"></i>Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Password must be at least 6 characters.
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button class="btn btn-secondary btn-lg w-100 mt-4">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Text -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="fas fa-lightbulb me-1"></i>
                    Fill out the form to create a new account
                </small>
            </div>
        </div>
    </div>
</div>

<script>
    // Bootstrap validation script
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.validated-form');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
